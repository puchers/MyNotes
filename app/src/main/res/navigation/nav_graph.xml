<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/noteListFragment">

    <fragment
        android:id="@+id/noteListFragment"
        android:name="com.example.mynotes.NoteListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/note_list_fragment">
        <action
            android:id="@+id/action_noteListFragment_to_noteDetailFragment"
            app:destination="@id/noteDetailFragment" />
        <action
            android:id="@+id/action_noteListFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteDetailFragment"
        android:name="com.example.mynotes.NoteDetailFragment"
        android:label="@string/note_detail_fragment_title"
        tools:layout="@layout/fragment_note_detail">
        <argument
            android:name="note_id"
            app:argType="integer" />
        <action
            android:id="@+id/action_noteDetailFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.example.mynotes.AddNoteFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_add_note">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="note_id"
            android:defaultValue="-1"
            app:argType="integer" />
        <action
            android:id="@+id/action_addNoteFragment_to_noteListFragment"
            app:destination="@id/noteListFragment"
            app:popUpTo="@id/noteListFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>